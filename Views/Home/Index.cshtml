@model IEnumerable<TextEditor.Models.Document>

@{
    ViewData["Title"] = "Home";
}

@if (User.Identity!.IsAuthenticated)
{
    <div class="d-flex justify-content-center align-items-center" style="width: 150px; height: 200px; background-color: lightgray; font-size: 100px;">
        <a style="text-decoration: none; color: black" asp-controller="Document" asp-action="Create">+</a>
    </div>
    <span style="font-weight: bold">Blank Document</span>
}

<hr />

@if (User.Identity!.IsAuthenticated)
{
    @if (Model != null && Model.Any()) 
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-2">
                    <div class="d-flex justify-content-center align-items-center"
                         style="width: 150px; height: 200px; background-color: lightblue; font-size: 100px;">
                        <a style="text-decoration: none; color: black" asp-controller="Document" asp-action="Edit", asp-route-id="@item.Id">📄</a>
                    </div>
                    <span style="font-weight: bold">@item.Title</span>
                </div>
            }
        </div>
    }
}